doctype html
html(lang='ja')
  include ./includes/head.jade
  body
    include ./includes/navbar.jade

    .container
      h1= title

      include ./includes/events-shared.jade

      - var halfWidth = 6;
      - var eventItemBinaryClass = 'odd';

      #events.compact-events-view
        each event in events
          +eventItem(event, halfWidth, 0, eventItemBinaryClass)
          - eventItemBinaryClass = eventItemBinaryClass == 'odd' ? 'even' : 'odd' ;

    input#filter-authors(value=filters.authors || '')
    input#filter-repository(value=filters.repository || '')
    script(type='text/javascript', src='/timeline.js')
    include ./includes/foot.jade
